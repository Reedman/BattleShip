<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/actionbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_maintitle">
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_toolkit">

        <ImageButton
            android:id="@+id/onPrev"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/btn_pre_selector" />

        <ImageButton
            android:id="@+id/onReady"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00000000"
            android:src="@drawable/ic_ready" 
            android:layout_weight="1"/>

        
        <ImageButton 
        	android:id="@+id/rotateship"
            android:src="@drawable/ic_rot"
         	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:background="#00000000"
        	android:layout_weight="1"
        />

        <ImageButton
            android:id="@+id/onRandom"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00000000"
            android:src="@drawable/ic_random"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/onNext"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/btn_next_selector" />

    </LinearLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/toolbar"
        android:layout_below="@id/actionbar"
        >
        
    </android.support.v4.view.ViewPager>
        
</RelativeLayout>